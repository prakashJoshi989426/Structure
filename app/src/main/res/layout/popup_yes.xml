<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_text"
        android:orientation="vertical"
        android:padding="@dimen/main_layout_padding">

        <TextView
            android:id="@+id/alert_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/app_name"
            android:textColor="@color/text_review_dialog"
            android:textSize="@dimen/text_size_extra_large" />

        <ScrollView
            android:id="@+id/sv_alert_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/txtTitle_alertLogout"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_alert_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alert_title_tv"
                android:layout_marginLeft="@dimen/sf_scale_8dp"
                android:layout_marginTop="@dimen/sf_scale_8dp"
                android:layout_marginRight="@dimen/sf_scale_8dp"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/sf_scale_6dp"
                android:textColor="#111"
                android:textSize="@dimen/text_size_medium" />
        </ScrollView>


        <Button
            android:id="@+id/button_ok_alert_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_alert_tv"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_child_layout"
            android:background="@android:color/transparent"
            android:text="@string/btn_ok"
            android:textAllCaps="false"
            android:textColor="@color/text_review_dialog"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>
</RelativeLayout>